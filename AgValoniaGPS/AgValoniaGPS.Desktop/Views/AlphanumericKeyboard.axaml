<Window xmlns="https://github.com/avaloniaui"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        x:Class="AgValoniaGPS.Desktop.Views.AlphanumericKeyboard"
        Title="Enter Text"
        Width="520"
        Height="420"
        WindowStartupLocation="CenterOwner"
        CanResize="False"
        ShowInTaskbar="False"
        Background="#2C3E50">

    <Window.Styles>
        <Style Selector="Button.KeyButton">
            <Setter Property="FontSize" Value="18"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="MinWidth" Value="42"/>
            <Setter Property="MinHeight" Value="42"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>
        <Style Selector="Button.KeyButton:pointerover">
            <Setter Property="Background" Value="#4A6278"/>
        </Style>
        <Style Selector="Button.KeyButton:pressed">
            <Setter Property="Background" Value="#1ABC9C"/>
        </Style>

        <Style Selector="Button.WideButton">
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="CornerRadius" Value="4"/>
            <Setter Property="Margin" Value="2"/>
            <Setter Property="MinHeight" Value="42"/>
            <Setter Property="HorizontalContentAlignment" Value="Center"/>
            <Setter Property="VerticalContentAlignment" Value="Center"/>
        </Style>

        <Style Selector="Button.ShiftButton">
            <Setter Property="Background" Value="#7F8C8D"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.ShiftButton:pointerover">
            <Setter Property="Background" Value="#95A5A6"/>
        </Style>
        <Style Selector="Button.ShiftActive">
            <Setter Property="Background" Value="#3498DB"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>

        <Style Selector="Button.BackButton">
            <Setter Property="Background" Value="#E67E22"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.BackButton:pointerover">
            <Setter Property="Background" Value="#F39C12"/>
        </Style>

        <Style Selector="Button.CancelButton">
            <Setter Property="Background" Value="#C0392B"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.CancelButton:pointerover">
            <Setter Property="Background" Value="#E74C3C"/>
        </Style>

        <Style Selector="Button.OkButton">
            <Setter Property="Background" Value="#27AE60"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.OkButton:pointerover">
            <Setter Property="Background" Value="#2ECC71"/>
        </Style>

        <Style Selector="Button.SpaceButton">
            <Setter Property="Background" Value="#34495E"/>
            <Setter Property="Foreground" Value="White"/>
        </Style>
        <Style Selector="Button.SpaceButton:pointerover">
            <Setter Property="Background" Value="#4A6278"/>
        </Style>
    </Window.Styles>

    <Grid RowDefinitions="Auto,Auto,*" Margin="10">
        <!-- Description label -->
        <TextBlock x:Name="DescriptionLabel"
                   Grid.Row="0"
                   Text="Enter text:"
                   Foreground="#BDC3C7"
                   FontSize="14"
                   Margin="5,0,5,5"/>

        <!-- Display area -->
        <Border Grid.Row="1"
                Background="#1A252F"
                CornerRadius="6"
                Padding="10"
                Margin="0,0,0,10">
            <TextBlock x:Name="DisplayText"
                       Text=""
                       Foreground="#1ABC9C"
                       FontSize="28"
                       FontWeight="Bold"
                       HorizontalAlignment="Left"
                       TextAlignment="Left"/>
        </Border>

        <!-- Keyboard grid -->
        <StackPanel Grid.Row="2" Spacing="2">
            <!-- Number row -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="1" Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="2" Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="3" Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="4" Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="5" Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="6" Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="7" Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="8" Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="9" Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="0" Classes="KeyButton" Click="OnKeyClick"/>
            </StackPanel>

            <!-- QWERTY row -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="KeyQ" Content="Q" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyW" Content="W" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyE" Content="E" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyR" Content="R" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyT" Content="T" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyY" Content="Y" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyU" Content="U" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyI" Content="I" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyO" Content="O" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyP" Content="P" Classes="KeyButton" Click="OnKeyClick"/>
            </StackPanel>

            <!-- ASDF row -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="KeyA" Content="A" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyS" Content="S" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyD" Content="D" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyF" Content="F" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyG" Content="G" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyH" Content="H" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyJ" Content="J" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyK" Content="K" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyL" Content="L" Classes="KeyButton" Click="OnKeyClick"/>
            </StackPanel>

            <!-- ZXCV row with Shift -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button x:Name="ShiftButton" Content="Shift" Classes="WideButton ShiftButton" Width="70" Click="OnShiftClick"/>
                <Button x:Name="KeyZ" Content="Z" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyX" Content="X" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyC" Content="C" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyV" Content="V" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyB" Content="B" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyN" Content="N" Classes="KeyButton" Click="OnKeyClick"/>
                <Button x:Name="KeyM" Content="M" Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="âŒ«" Classes="WideButton BackButton" Width="70" Click="OnBackspaceClick"/>
            </StackPanel>

            <!-- Bottom row: special chars, space, cancel, ok -->
            <StackPanel Orientation="Horizontal" HorizontalAlignment="Center">
                <Button Content="-" Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="_" Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="." Classes="KeyButton" Click="OnKeyClick"/>
                <Button Content="Space" Classes="WideButton SpaceButton" Width="150" Click="OnSpaceClick"/>
                <Button Content="Cancel" Classes="WideButton CancelButton" Width="80" Click="OnCancelClick"/>
                <Button Content="OK" Classes="WideButton OkButton" Width="80" Click="OnOkClick"/>
            </StackPanel>
        </StackPanel>
    </Grid>
</Window>
